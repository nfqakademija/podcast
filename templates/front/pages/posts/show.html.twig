    <script>

        function toogle(item)
        {
            $.get( "{{ path('like', {'podcast': podcast.id}) }}", function( data ) {


                if (data.likes) {
                    item.classList.add('active');
                    $('.counter', item).html(data.countLikes);
                } else {
                    item.classList.remove('active');
                    $('.counter', item).html(data.countLikes);
                }

            });
        }
    </script>
