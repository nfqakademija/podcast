{% if pageCount > 1 %}
    <div class="sh-pagination sh-default-color">
     <ul class='page-numbers'>
        {% if first is defined and current != first %}
        <li>
            <span aria-current='page' class='page-numbers current'>
                <a href="{{ path(route, query|merge({(pageParameterName): first})) }}">&lt;&lt;</a>
            </span>
        </li>
        {% endif %}

        {% if previous is defined %}
            {# <span class="previous"> #}
                <li><a href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&lt;</a></li>
            {# </span> #}
        {% endif %}

        {% for page in pagesInRange %}
            {% if page != current %}
                <li>
                    <a class='page-numbers' href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                </li>
            {% else %}
                <li>
                    <span aria-current='page' class='page-numbers current'>{{ page }}</span>
                </li>
            {% endif %}
        {% endfor %}

        {% if next is defined %}
            <li>
                <a class="next page-numbers" href="{{ path(route, query|merge({(pageParameterName): next})) }}">&gt;</a>
            </li>
        {% endif %}

        {% if last is defined and current != last %}
            {# <span class="last"> #}
                <li><a href="{{ path(route, query|merge({(pageParameterName): last})) }}">&gt;&gt;</a></li>
            {# </span> #}
        {% endif %}
        </ul>
    </div>
{% endif %}
